<Page x:ConnectionId='1'
    x:Name="pageRoot"
    x:Class="HealthApp.HubPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HealthApp"
    xmlns:data="using:HealthApp.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Grid-appropriate 310 by 260 pixel item template as seen in section 4 -->
        <DataTemplate x:Key="Standard310x260ItemTemplate">
            <Grid Height="250" Width="310" Margin="5,10,5,10" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Height="150">
                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}"/>
                </Border>
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <TextBlock Text="{Binding Title}" Style="{StaticResource TitleTextBlockStyle}" TextWrapping="NoWrap"/>
                    <TextBlock Text="{Binding Description}" Style="{StaticResource BodyTextBlockStyle}" MaxHeight="60" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <!--
    This grid acts as a root panel for the page.
  -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush }" RequestedTheme="Light">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Hub x:ConnectionId='2'                                              >
            <Hub.Header  >
                <!-- Back button and page title -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='3'  x:Name="backButton" Style="{StaticResource NavigationBackButtonNormalStyle}"
                        Margin="0,0,39,0" 
                        VerticalAlignment="Top"
                        Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
                    <TextBlock x:ConnectionId='4' x:Name="pageTitle" Text="Health App" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        VerticalAlignment="Top" IsHitTestVisible="false" TextWrapping="NoWrap"                                               Height="697" Margin="0,0,-840,-656" />
                    <TextBlock x:ConnectionId='5' x:Name="txtbx" Text="Swipe " VerticalAlignment="Bottom" Grid.Column="1" Margin="1043,0,-870,-602" FontWeight="Normal" FontSize="50" FontFamily="Segoe UI" />
</Grid>

            </Hub.Header>
            <HubSection Width="1366" Height="818">
                <HubSection.Background>
                    <ImageBrush ImageSource="Assets/1c5f0161-06d2-41d8-8910-fd2eb8cd58ad.jpg" Stretch="Uniform" />
                </HubSection.Background>
            </HubSection>
            <HubSection x:ConnectionId='6' x:Name="header4"  IsHeaderInteractive="True" DataContext="{Binding Section2Items}" d:DataContext="{Binding Groups[2], Source={d:DesignData Source=../HealthApp.Shared/DataModel/SampleData.json, Type=data:SampleDataSource}}"
                        Width="500"  Background="v"  >
                <HubSection.Header >


                    <Grid Height="430" Width="426">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320" />
                            <RowDefinition Height="160"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Health Exercises" FontSize="32"/>
                        <Image x:ConnectionId='17' x:Name="image2" Source="Assets/exercise.jpg" Stretch="Fill" Margin="0,50,0,5"  />

                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                                    Text="Exercise keeps you healthy" FontSize="26.67" FontWeight="Normal" Grid.Row="1"
                                   LineHeight="30" Margin="0,50,0,-31"/>

                    </Grid>

                </HubSection.Header>
            </HubSection>

            <HubSection IsHeaderInteractive="True" DataContext="{Binding Section3Items}" d:DataContext="{Binding Groups[3], Source={d:DesignData Source=../HealthApp.Shared/DataModel/SampleData.json, Type=data:SampleDataSource}}"
                        Padding="40,40,40,32" Width="500" Background="LightPink">

                <HubSection.Header>

                    <Grid Height="440" Width="426">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320"/>
                            <RowDefinition Height="160"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Be Healthy" FontSize="32"/>
                        <Image Source="Assets/56newpic1.jpg" Margin="0,50,0,0" Stretch="Fill"    />

                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1"
                                    Text="Be healthy.Read about important tips for your daily health." 
                                   TextWrapping="Wrap" FontSize="26.67" Margin="0,50,0,-52" LineHeight="30" />
                    </Grid>
                </HubSection.Header>
            </HubSection>
            <HubSection x:ConnectionId='7' x:Name="header3"  Width="500" Background="LightGreen" IsHeaderInteractive="True" >
                <HubSection.Header>
                    <!-- width of 400 -->
                    <StackPanel Orientation="Vertical">
                        <Grid Height="430" Width="426">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="260"/>
                                <RowDefinition Height="65"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Health Recipies" Grid.ColumnSpan="3" FontSize="32"/>
                            <Image Source="Assets/food.jpg" Grid.ColumnSpan="5" Margin="0,50,0,10" Stretch="Fill" />
                            <Image Source="Assets/food1.jpg" Grid.Row="1" Stretch="Fill"/>
                            <Image Source="Assets/steak.jpg" Grid.Row="1" Grid.Column="2" Stretch="Fill"/>
                            <Image Source="Assets/0152.jpg" Grid.Row="1" Grid.Column="4" Stretch="Fill"/>
                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="2" Grid.ColumnSpan="5"  Margin="0,48,0,10"
                                       Text="Eat tasty but healthy food" FontSize="26.67" LineHeight="30"   
                                       />

                        </Grid>
                    </StackPanel>
                </HubSection.Header>
            </HubSection>
            <HubSection x:ConnectionId='8'  x:Name="header1" Width="500"  Background="#FFF9DB38"  IsHeaderInteractive="True" Tag="1" >
                <HubSection.Header>
                    <Grid Height="430" Width="426">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="270"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320"/>
                            <RowDefinition Height="160"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='14' x:Name="txtb3" Text="Health BMI Calculator " FontSize="32" Margin="0,0,-146,0" />
                        <Image x:ConnectionId='15' x:Name="image1" Source="Assets/weight.jpg" Stretch="Fill" Margin="0,50,-155,150" Grid.RowSpan="2"
                                />

                        <TextBlock x:ConnectionId='16' Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1"                                              
                                Text=" Calculate your weight in a second" Margin="0,50,-155,-31" FontSize="26.67"
                                   LineHeight="30"  />

                    </Grid>
                </HubSection.Header>
            </HubSection>
            <HubSection x:ConnectionId='9'  x:Name="header2" Width="500"  Background="#FFAB94C5"  IsHeaderInteractive="True" Tag="1" >
                <HubSection.Header>
                    <Grid Height="430" Width="426">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="270"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320"/>
                            <RowDefinition Height="160"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='11' x:Name="txtb4" Text="Health Calorie-Counter " FontSize="32" Margin="0,0,-146,0" />
                        <Image x:ConnectionId='12' x:Name="image3" Source="Assets/calorie.jpg" Stretch="Fill" Margin="0,50,-155,150" Grid.RowSpan="2"
                                />

                        <TextBlock x:ConnectionId='13' Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1"                                              
                                Text="Count the calories in your meals" Margin="0,50,-156,-31" FontSize="26.67" TextWrapping="Wrap"
                                   LineHeight="30"  />

                    </Grid>
                </HubSection.Header>
            </HubSection>
            <HubSection x:ConnectionId='10' x:Name="hubsection5" IsHeaderInteractive="True" DataContext="{Binding Section5Items}" d:DataContext="{Binding Groups[5], Source={d:DesignData Source=../HealthApp.Shared/DataModel/SampleData.json, Type=data:SampleDataSource}}"
                        Padding="40,40,40,32" Width="500" Background="#FF44A0A0">

                <HubSection.Header>

                    <Grid Height="440" Width="426">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320"/>
                            <RowDefinition Height="160"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Health Beauty Care" FontSize="32"/>
                        <Image Source="Assets/beauty.jpg" Margin="0,50,0,0" Stretch="Fill"    />

                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1"
                                    Text="Care about your beauty in a healthy way" 
                                   TextWrapping="Wrap" FontSize="26.67" Margin="0,50,0,-52" LineHeight="30" />
                    </Grid>
                </HubSection.Header>
            </HubSection>
        </Hub>

    </Grid>
</Page>

